@model CoffeShop.Models.VoucherView
@{
    ViewBag.Title = "EditVoucher";
    Layout = "~/Views/Shared/_LayoutMarketing.cshtml";
}

<div class="col-lg-12 container">
    <div class="p-5">
        <div class="text-center">
            <h1 class="h4 text-success mb-4 ">Edit Voucher</h1>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <form class="user" method="post" enctype="multipart/form-data">
                <div class="form-group mt-2">
                    <div class="col-sm-12 mb-0">
                        <p class="mb-0 mt-0 ms-5">Voucher Name</p>
                        @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control form-control-user" } })
                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group mt-4">
                    <div class="col-sm-12 mb-0">
                        <p class="mb-0 mt-0 ms-5">Discount</p>
                        @Html.EditorFor(model => model.discount, new { htmlAttributes = new { @class = "form-control form-control-user" } })
                        @Html.ValidationMessageFor(model => model.discount, "", new { @class = "text-danger" })
                    </div>
                </div>
                @Html.HiddenFor(model=>model.id)
                <button type="submit" class="btn btn-primary btn-user btn-block">
                    Edit Voucher
                </button>
            </form>
        }


    </div>
</div>
